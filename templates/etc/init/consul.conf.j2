# Taken and adatped from https://github.com/hashicorp/consul/blob/master/bench/conf/upstart.conf
description "Consul {{ _consul.service_name }}"

start on runlevel [2345]
stop on runlevel [!2345]

setuid consul
setgid consul

respawn

script
  # Make sure to use all our CPUs, because Consul can block a scheduler thread
  export GOMAXPROCS=`nproc`

  # Source additional flags if present
  if [ -f "/etc/default/{{ _consul.service_name }}" ]; then
    . /etc/default/{{ _consul.service_name }}
  fi

  # Run the agent
  exec /usr/local/bin/consul agent -config-dir="{{ _consul.config_dir }}" -bind={{ _consul.listen.bind|default("0.0.0.0") }} -client={{ _consul.listen.client|default("127.0.0.1") }} ${CONSUL_FLAGS} -node=$(hostname -f)
end script

